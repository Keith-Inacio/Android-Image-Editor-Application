<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/birdImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bird"
         />

    <TextView
        android:id="@+id/birdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bird_text"
        android:layout_toEndOf="@+id/birdImage"
        android:layout_alignTop="@+id/birdImage"
        android:layout_alignBottom="@+id/birdImage"
        android:visibility="invisible"
        android:gravity="center_vertical"
        />

    <ImageView
        android:id="@+id/catImage"
        android:src="@drawable/cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/birdImage"
        />

    <TextView
        android:id="@+id/catText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cat_text"
        android:layout_toEndOf="@+id/catImage"
        android:layout_alignTop="@+id/catImage"
        android:layout_alignBottom="@+id/catImage"
        android:visibility="invisible"
        android:gravity="center_vertical"
        />

    <ImageView
        android:id="@+id/dogImage"
        android:src="@drawable/dog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/catImage"
        />

    <TextView
        android:id="@+id/dogText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dog_text"
        android:layout_toEndOf="@+id/dogImage"
        android:layout_alignTop="@+id/dogImage"
        android:layout_alignBottom="@+id/dogImage"
        android:visibility="invisible"
        android:gravity="center_vertical"
        />

    <Button
        android:id="@+id/rotate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dogImage"
        android:text="@string/rotate"
        android:layout_alignTop="@id/pad"
        android:layout_alignBottom="@id/pad"/>

    <Button
        android:id="@+id/flip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/rotate"
        android:layout_below="@+id/dogImage"
        android:text="@string/flip"
        android:gravity="center_horizontal"
        android:layout_alignTop="@id/pad"
        android:layout_alignBottom="@id/pad"/>

    <ImageView
        android:id="@+id/arrowUp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/ic_arrow_upward_black_24dp"
        android:layout_toEndOf="@+id/arrowBack"
        android:layout_below="@+id/dogImage"
        />


    <ImageView
        android:id="@+id/pad"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/ic_filter_center_focus_black_24dp"
        android:layout_toEndOf="@+id/arrowBack"
        android:layout_below="@+id/arrowUp"
        />

    <ImageView
        android:id="@+id/arrowBack"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp"
        android:layout_toEndOf="@+id/flip"
        android:layout_below="@+id/arrowUp"
        />

    <ImageView
        android:id="@+id/arrowForward"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/ic_arrow_forward_black_24dp"
        android:layout_toEndOf="@+id/pad"
        android:layout_below="@+id/arrowUp"
        />

    <ImageView
        android:id="@+id/arrowDown"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/ic_arrow_downward_black_24dp"
        android:layout_toEndOf="@+id/arrowBack"
        android:layout_below="@+id/pad"
        />


</RelativeLayout>